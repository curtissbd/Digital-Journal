<Window x:Class="Digital_Journal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Digital_Journal"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#FF00B9FF">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <TextBlock HorizontalAlignment="Left" Margin="42,46,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="149" Width="693" FontSize="36" TextAlignment="Center"><Run Text="Welcome to the Digital Diary Journal Center!"/><LineBreak/><Run Text="Please login or register for an account."/></TextBlock>
        <Button x:Name="Register" Content="Register" HorizontalAlignment="Left" Height="83" Margin="465,236,0,0" VerticalAlignment="Top" Width="256" FontSize="24" Background="Green" Foreground="#FFFFFCFC" Click="Button_Click_Register"/>
        <Button x:Name="Login" Content="Login" HorizontalAlignment="Left" Height="83" Margin="80,236,0,0" VerticalAlignment="Top" Width="256" FontSize="24" Background="Green" Foreground="#FFFFFCFC" Click="Button_Click_Login"/>

    </Grid>
</Window>
