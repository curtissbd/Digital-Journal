<Window x:Class="Digital_Journal.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Digital_Journal"
        mc:Ignorable="d"
        Title="MainMenu" Height="450" Width="800">
    <Grid Background="#FF05BB69">
        <TextBlock HorizontalAlignment="Left" Margin="220,25,0,0" TextWrapping="Wrap" Text="Main Menu" VerticalAlignment="Top" Height="60" Width="360" FontSize="36" TextAlignment="Center"/>
        <Button Content="View Journals" HorizontalAlignment="Left" Margin="320,100,0,0" VerticalAlignment="Top" Width="160" Height="60" Background="LightBlue" FontSize="18" Click="Button_Click_View"/>
        <Button Content="Add Journals" HorizontalAlignment="Left" Margin="320,180,0,0" VerticalAlignment="Top" Width="160" Height="60" Background="LightBlue" FontSize="18" Click="Button_Click_Add"/>
        <Button Content="Edit Profile" HorizontalAlignment="Left" Margin="320,260,0,0" VerticalAlignment="Top" Width="160" Height="60" Background="LightBlue" FontSize="18" Click="Button_Click_Edit"/>
        <Button Content="Exit" HorizontalAlignment="Left" Margin="320,340,0,0" VerticalAlignment="Top" Width="160" Height="60" Background="LightBlue" FontSize="18" Click="Button_Click_Exit"/>
    </Grid>
</Window>
