<Window x:Class="Digital_Journal.AddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Digital_Journal"
        mc:Ignorable="d"
        Title="AddWindow" Height="450" Width="800" FontSize="18">
    <Grid>
        <Button Content="Add Journal" HorizontalAlignment="Left" Margin="341,320,0,0" VerticalAlignment="Top" Width="119" Height="61" Click=" Button_Click_Add"/>
        <Button Content="Exit" HorizontalAlignment="Left" Margin="501,320,0,0" VerticalAlignment="Top" Width="119" Height="61" Click=" Button_Click_Exit"/>
        <Button Content="Main Menu" HorizontalAlignment="Left" Margin="180,320,0,0" VerticalAlignment="Top" Width="119" Height="61" Click="Button_Click_Main_Menu"/>
        <TextBox x:Name="JournalName" HorizontalAlignment="Left" Height="23" Margin="240,20,0,0" TextWrapping="Wrap" Text="Please enter the Journal Name here" VerticalAlignment="Top" Width="320" TextAlignment="Center"/>
        <TextBox Name="Data" HorizontalAlignment="Left" Height="245" Margin="80,60,0,0" TextWrapping="Wrap" Text="Please enter your Journal entry here." VerticalAlignment="Top" Width="640"/>
    </Grid>
</Window>
